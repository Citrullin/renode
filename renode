#!/bin/bash
set -e
set -u

# this is to support running Renode from external directory
ROOT_PATH="$(cd $(dirname $0); echo $PWD)"

. "$ROOT_PATH/tools/common.sh"

OUTPUT_PATH="$ROOT_PATH/output/bin"

TARGET="Release"
QUIET=false
NET=false
TFM="net5.0"

PARAMS=()
for ARG in "$@"
do
    if [ "$ARG" == "-d" ]
    then
        TARGET="Debug"
        if $ON_LINUX
        then
            LAUNCHER="$LAUNCHER --debug"
        fi
    elif [ "$ARG" == "-q" ]
    then
        QUIET=true
    elif [ "$ARG" == "--net" ]
    then
        NET=true
    else
        PARAMS+=("$ARG")
    fi
done

if ! $ON_WINDOWS && ! $NET
then
    verify_mono_version
fi

if ${REMOTE:-false} && ! $NET
then
    LAUNCHER="$LAUNCHER --debugger-agent=transport=dt_socket,address=0.0.0.0:${REMOTE_PORT:=9876},server=y"
    echo "Waiting for a debugger at port $REMOTE_PORT..."
fi

if ${QUIET:-false}
then
    exec 2>/dev/null
fi

if $NET
then
    if $ON_WINDOWS
    then
        TFM="net5.0-windows10.0.17763.0"
        "${OUTPUT_PATH}/${TARGET}/${TFM}/Renode.exe" "${PARAMS[@]:-}"
    else
        dotnet "${OUTPUT_PATH}/${TARGET}/${TFM}/Renode.dll" "${PARAMS[@]:-}"
    fi
else
    if $ON_WINDOWS
    then
        "${OUTPUT_PATH}/${TARGET}/Renode.exe" "${PARAMS[@]:-}"
    else
        $LAUNCHER "${OUTPUT_PATH}/${TARGET}/Renode.exe" "${PARAMS[@]:-}"
    fi
fi


